<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/parent_top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".025" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/parent_bottom_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".975" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/center_vertical_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".5" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".025" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".975" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/center_horizontal_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5" />

    <TextView
            android:id="@+id/portfolio_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryTextColor"
            android:textSize="16sp"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/parent_top_guideline"
            app:layout_constraintStart_toEndOf="@id/left_guideline"
            tools:text="PORTFOLIO NAME COMES HERE" />

    <LinearLayout
            android:id="@+id/total_ne_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/portfolio_name"
            app:layout_constraintStart_toEndOf="@id/left_guideline"
            app:layout_constraintEnd_toStartOf="@id/right_guideline">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Total Value (NE)"
                android:textColor="@color/primaryColor"
                android:textSize="12sp" />
        <TextView
                android:id="@+id/total_value_ne_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textColor="@color/secondaryColor"
                android:textSize="12sp"
                tools:text="Some info might be very long" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/total_we_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/total_ne_layout"
            app:layout_constraintEnd_toStartOf="@id/right_guideline">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Total Value (WE)"
                android:textColor="@color/primaryColor"
                android:textSize="12sp" />
        <TextView
                android:id="@+id/total_value_we_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textColor="@color/secondaryColor"
                android:textSize="12sp"
                tools:text="Some info might be very long" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/profit_ne_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/total_we_layout"
            app:layout_constraintEnd_toStartOf="@id/right_guideline">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Total Profit (NE)"
                android:textColor="@color/primaryColor"
                android:textSize="12sp" />
        <TextView
                android:id="@+id/total_profit_ne_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textColor="@color/secondaryColor"
                android:textSize="12sp"
                tools:text="Some info might be very long" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/profit_we_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/profit_ne_layout"
            app:layout_constraintEnd_toStartOf="@id/right_guideline">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Total Profit (WE)"
                android:textColor="@color/primaryColor"
                android:textSize="12sp" />
        <TextView
                android:id="@+id/total_profit_we_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textColor="@color/secondaryColor"
                android:textSize="12sp"
                tools:text="Some info might be very long" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/profit_perc_ne_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/profit_we_layout"
            app:layout_constraintEnd_toStartOf="@id/right_guideline">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Total Profit % (NE)"
                android:textColor="@color/primaryColor"
                android:textSize="12sp" />
        <TextView
                android:id="@+id/total_profit_ne_perc_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textColor="@color/secondaryColor"
                android:textSize="12sp"
                tools:text="Some info might be very long" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/profit_perc_we_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/profit_perc_ne_layout"
            app:layout_constraintEnd_toStartOf="@id/right_guideline">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Total Profit % (WE)"
                android:textColor="@color/primaryColor"
                android:textSize="12sp" />
        <TextView
                android:id="@+id/total_profit_we_perc_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textColor="@color/secondaryColor"
                android:textSize="12sp"
                tools:text="Some info might be very long" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>