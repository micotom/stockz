<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:layout_margin="6dp">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/center_vertical_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5" />

    <LinearLayout
            android:id="@+id/left_column"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/center_vertical_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <include
                android:id="@+id/name"
                layout="@layout/info_single_layout" />

        <include
                android:id="@+id/publisher"
                layout="@layout/info_single_layout" />

        <include
                android:id="@+id/isin"
                layout="@layout/info_single_layout" />

        <include
                android:id="@+id/symbol"
                layout="@layout/info_single_layout" />

        <include
                android:id="@+id/index"
                layout="@layout/info_single_layout" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/right_column"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/center_vertical_guideline"
            app:layout_constraintTop_toTopOf="parent">

        <include
                android:id="@+id/ter"
                layout="@layout/info_single_layout" />

        <include
                android:id="@+id/profitUse"
                layout="@layout/info_single_layout" />

        <include
                android:id="@+id/replication"
                layout="@layout/info_single_layout" />

        <include
                android:id="@+id/listing_date"
                layout="@layout/info_single_layout" />

    </LinearLayout>

    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@color/cardBorderColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/left_column" />

</androidx.constraintlayout.widget.ConstraintLayout>